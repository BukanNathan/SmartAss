<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="testing.MainActivity">

    <LinearLayout
        android:id="@+id/AppBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/orange">
        <Button
            android:id="@+id/home_btn"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/ic_home_foreground"
            android:backgroundTint="@color/black"/>
        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="match_parent"
            android:background="@drawable/search"
            android:layout_margin="10dp"
            android:layout_marginLeft="150dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/AppBar"
        android:background="@drawable/jakarta"
        />
<!--    <fragment-->
<!--        android:id="@+id/map"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_below="@id/AppBar"-->
<!--        android:name="com.google.android.gms.maps.SupportMapFragment">-->
<!--    </fragment>-->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/GetLocation"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/AppBar"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/ic_getlocation_foreground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/map"
        android:background="@drawable/bg">
        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/search" />
        <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txtclinic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:background="@color/white">
        <ImageView
            android:id="@+id/ClinicIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_clinic_foreground"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/Clinic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic 1"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/Locationicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/ic_location_foreground"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/Address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="75dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/Favorite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_favorite_foreground" />

        <ImageView
            android:id="@+id/Ratingicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/ic_star_foreground" />

        <TextView
            android:id="@+id/Rate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5/5"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="108dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/kmicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/ic_km_foreground" />

        <TextView
            android:id="@+id/km1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5km"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="108dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/openicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/ic_km_foreground" />

        <TextView
            android:id="@+id/open1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="108dp"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txtclinic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtclinic1"
        android:background="@drawable/bg">
        <ImageView
            android:id="@+id/ClinicIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-20dp"
            app:srcCompat="@drawable/ic_clinic_foreground"
            tools:ignore="DuplicateIds,VectorDrawableCompat" />

        <TextView
            android:id="@+id/Clinic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic 2"
            android:layout_toRightOf="@id/ClinicIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/Locationicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-20dp"
            app:srcCompat="@drawable/ic_location_foreground"
            tools:ignore="DuplicateIds,VectorDrawableCompat" />

        <TextView
            android:id="@+id/Address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/Favorite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-20dp"
            app:srcCompat="@drawable/ic_favorite_foreground" />

        <ImageView
            android:id="@+id/Ratingicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/ic_star_foreground"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/Rate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0/5"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:background="@color/black"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/kmicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_km_foreground"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/km2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8km"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/openicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/ic_km_foreground"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/open2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>


</RelativeLayout>