<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".product_3"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg">
        <ImageButton
            android:id="@+id/imageBack"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/ic_back_foreground"
            android:tint="#000000"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Product Details"
            android:layout_margin="3dp"
            android:paddingTop="15dp"
            android:textSize="30dp"
            android:shadowColor="#7F000000"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="5"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_home_foreground"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <ImageView
        android:id="@+id/productdetails"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:layout_below="@id/AppBar"
        app:srcCompat="@drawable/necklace" />
    <RelativeLayout
        android:id="@+id/productdesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/productdetails"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/asd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="26dp"
                android:text="Product Name"
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:shadowColor="#7F000000"
                android:shadowDx="3"
                android:shadowDy="4"
                android:shadowRadius="5"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cart_foreground"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/productname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productname"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32dp"
                android:text="Price"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:shadowColor="#7F000000"
                android:shadowDx="3"
                android:shadowDy="4"
                android:shadowRadius="5"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32dp"
                android:text="Rp.42.000"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/productname3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productname2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginTop="30dp"
                android:numStars="5"
                android:rating="3.5" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3.5/5"
                android:textSize="28sp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:paddingTop="37dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/productname4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/productname3"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/product1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/storename"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:gravity="center_horizontal"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/ic_store_foreground"
                    android:text="Store Name" />
                <ImageButton
                    android:id="@+id/icon_fav"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_favorite_foreground"
                    android:clickable="true"
                    android:tint="#000000"/>
            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Purchase Now"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:backgroundTint="@android:color/holo_orange_dark"
                android:clickable="true"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>